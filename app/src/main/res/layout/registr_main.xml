<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Auth_Registr.RegistrActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70sp"
    android:background="#dddddd"
    android:paddingBottom="0.1dp">

    <TextView
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Регистрация"
        android:gravity="center"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:background="#f9f9f9"
        /><TextView
    android:id="@+id/BackText"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text=""
    android:gravity="center"
    android:textColor="#000000"
    android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
    android:paddingLeft="15sp"
    />
</RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="110sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@android:drawable/dialog_holo_light_frame"
        >
        <TextView
            android:id="@+id/Dr_sel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Водитель"
            android:background="#565357"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/Se_sel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Сервис"
            android:textSize="17dp"
            android:gravity="center"
            android:background="#ffffff"
            android:textColor="#000000"
            />

    </LinearLayout>

  <LinearLayout
      android:layout_centerVertical="true"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="70dp"
      android:orientation="vertical"
      android:padding="20sp">
      <EditText

          android:id="@+id/NameText"
          android:layout_marginTop="40sp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:hint="Имя"
          android:background="@drawable/edit_text_background"
          android:padding="5dp"
          android:paddingStart="10sp"
          android:inputType="text"
          android:visibility="visible"
          />

   <EditText
       android:id="@+id/EmailText"
       android:layout_marginTop="15sp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:hint="Email"
       android:background="@drawable/edit_text_background"
       android:padding="5dp"
       android:paddingStart="10sp"
       android:inputType="textEmailAddress"
       />

      <EditText
          android:id="@+id/PasswordText"
          android:layout_marginTop="15sp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:hint="Пароль"
          android:background="@drawable/edit_text_background"
          android:padding="5dp"
          android:paddingStart="10sp"
          android:inputType="textPassword"
          />
      <EditText
          android:id="@+id/RePasswordText"
          android:layout_marginTop="15sp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:hint="Повторный пароль"
          android:background="@drawable/edit_text_background"
          android:padding="5dp"
          android:paddingStart="10sp"
          android:inputType="textPassword"
          />
      <LinearLayout
          android:layout_marginTop="10sp"
          android:layout_width="match_parent"
          android:layout_height="50sp"
          android:orientation="horizontal">
      <CheckBox
          android:id="@+id/checkBox"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
        />
          <TextView
              android:id="@+id/RulesText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Согласен с пользовательским соглашением"
              android:gravity="left"

              android:textColor="#5d9ece"

              />
  </LinearLayout>
      <TextView
          android:id="@+id/RegistrText"
          android:layout_marginTop="20sp"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:text="Зарегистрироваться"
          android:background="@drawable/border"
          android:gravity="center"
          android:layout_marginLeft="30sp"
          android:layout_marginRight="30sp"
          android:textColor="#000000"
          android:textSize="17dp"
          />


  </LinearLayout>
    <LinearLayout

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20sp">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Уже зарегистрированы?"
            android:gravity="center"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/EnterText"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Войти"
            android:background="@drawable/border"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="17dp"
            />

    </LinearLayout>
</RelativeLayout>