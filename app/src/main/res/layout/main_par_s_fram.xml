<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Auth_Registr.RegistrActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="#dddddd"
        android:paddingBottom="0.1dp"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Общие параметры"
            android:textColor="#000000"
            android:textSize="17dp"
           android:background="#f9f9f9"
            android:fontFamily="sans-serif-medium"
            />
        <TextView
        android:id="@+id/backText3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
        android:gravity="center"
        android:paddingLeft="15sp"
        android:text=""
        android:textColor="#000000" />
    </RelativeLayout>
    <ScrollView
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/NextTextView"
        android:paddingBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">
    <LinearLayout
        android:id="@+id/lin"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView

            android:id="@+id/NameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="#000000"

          android:fontFamily="sans-serif-black"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/JobTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Автосервис"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#000000"

            />
        <LinearLayout
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <ImageView
               android:padding="3dp"
               android:layout_width="35dp"
               android:layout_height="35dp"
               android:src="@drawable/ic_phone"
               />

            <EditText
                android:layout_marginLeft="15dp"
                android:id="@+id/NumberTextView"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/edit_text_background"
                android:padding="5dp"
                android:text="+7"
                android:maxLength="12"
                android:inputType="phone"
                android:lines="1"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:padding="3dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_site"
                />

            <EditText
                android:layout_marginLeft="15dp"
                android:id="@+id/SiteTextView"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/edit_text_background"
                android:padding="5dp"
                android:text=""
                android:inputType="textPostalAddress"
                android:lines="1"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/GeoImage"
                android:padding="3dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_geo"
                />

            <com.fadeedittext.FadeEditText
                android:layout_marginLeft="15dp"
                android:id="@+id/GeoTextView"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_height="35dp"
                android:background="@drawable/edit_text_background"
                android:padding="5dp"
                android:text=""
                android:lines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:padding="3dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_clock"
                />

            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/ClockTextView"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/edit_text_background"
                android:padding="5dp"
                android:text="24"
                android:lines="1"
                android:gravity="center_vertical"
                android:textColor="#000000"
                />
            <ImageView
                android:id="@+id/TimeImage"
                android:layout_marginLeft="15dp"
                android:padding="3dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_time"
                />
        </LinearLayout>

        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выходные дни"
            android:textSize="20dp"
            android:textColor="#000000"

            />

        <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="1dp"
        android:background="#5d9ece"
        >
        <TextView
            android:id="@+id/day0"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Пн"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="#5d9ece"
            android:background="#ffffff"
      />
        <TextView
            android:id="@+id/day1"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Вт"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="#5d9ece"
            android:background="#ffffff"
            />
        <TextView
            android:id="@+id/day2"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ср"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="#5d9ece"
            android:background="#ffffff"
            />
        <TextView
            android:id="@+id/day3"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Чт"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="#5d9ece"
            android:background="#ffffff"
            />
        <TextView
            android:id="@+id/day4"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Пт"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="#5d9ece"
            android:background="#ffffff"
            />
        <TextView
            android:id="@+id/day5"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Сб"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="#5d9ece"
            android:background="#ffffff"
            />
        <TextView
            android:id="@+id/day6"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Вс"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="#5d9ece"
            android:background="#ffffff"
            />
    </LinearLayout>


    </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/NextTextView"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10dp"
        android:background="#e9e9e9"
        android:text="Сохранить"
        android:textColor="#000000"
        android:textSize="20sp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentBottom ="true"
        />

    <LinearLayout
        android:id="@+id/ChooseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="2dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:background="#000000"
            android:paddingTop="0.1dp"
            android:paddingBottom="0.1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:background="#ffffff"
                android:id="@+id/Cansel"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:text="Отмена"
                android:textColor="#000000"
                android:textSize="17dp"
                />

            <TextView
                android:background="#ffffff"
                android:id="@+id/Choose"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingTop="10sp"
                android:paddingRight="10sp"
                android:text="Выбрать"
                android:textColor="#000000"
                android:textSize="17dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <NumberPicker
            android:layout_weight="1"
            android:id="@+id/numberPicker1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#e9e9e9"
            />
        <NumberPicker
            android:layout_weight="1"
            android:id="@+id/numberPicker2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#e9e9e9"
            />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>